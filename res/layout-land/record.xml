<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

	<TextView 
		android:id="@+id/recordtitle"
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/recordtitle"
		android:gravity="center"
		android:textSize="14sp"
		android:background="#394" />

	<FrameLayout
		android:id="@+id/pictureframelayout"
		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		android:layout_below="@id/recordtitle" >
  		
  		<ImageView
  			android:id="@+id/pictureframe"
  			android:layout_below="@id/recordtitle"
  			android:layout_width="fill_parent"
        	android:layout_height="fill_parent" />
  			
  		<TextView
  			android:id="@+id/pictureframetext"
  			android:layout_below="@id/recordtitle"
  			android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
  			android:text="@string/picture_label"
  			android:gravity="center"
  			android:textSize="18sp" />
  		
  	</FrameLayout>
		
	<LinearLayout
		android:id="@+id/footersection"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:layout_alignParentBottom="true" >

		<LinearLayout
			android:id="@+id/leftfootersection"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="2" >
				
			<TextView
		 			android:id="@+id/recordname"
		 			android:layout_width="fill_parent"
			       	android:layout_height="wrap_content"
		 			android:text="@string/name_label"
		 			android:textSize="12sp" />
		 			
		 		<TextView
		 			android:id="@+id/recordcategory"
		 			android:layout_width="fill_parent"
			       	android:layout_height="wrap_content"
		 			android:text="@string/category_label"
		 			android:textSize="12sp" />
		 
		 </LinearLayout>

		<LinearLayout
			android:id="@+id/rightfootersection"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1" >
		 
		 		<TextView
		 			android:id="@+id/recordnotes"
		 			android:layout_width="fill_parent"
			       	android:layout_height="wrap_content"
		 			android:text="@string/notes_label"
		 			android:textSize="12sp" />

		</LinearLayout>
		  			
	</LinearLayout>
	
</RelativeLayout>
